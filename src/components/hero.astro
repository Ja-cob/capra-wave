---
import { Picture } from "astro:assets";
import heroImage from "assets/hero.png";
import Link from "@components/ui/link.astro";
import { Icon } from "astro-icon/components";
---

<main
  class="grid lg:grid-cols-2 place-items-center pt-16 pb-8 md:pt-12 md:pb-24">
  <div class="py-6 md:order-1 hidden md:flex flex-shrink">
    <Picture
      src={heroImage}
      alt="Goat with sunglasses"
      loading="eager"
      format="avif"
    />
  </div>
  <div>
    <h1
      class="text-5xl lg:text-6xl xl:text-7xl font-bold lg:tracking-tight xl:tracking-tighter">
      <a class="text-purple-600">Effective</a> Technology Solutions
    </h1>
    <p class="text-lg mt-4 text-slate-600 max-w-xl">
      Technology can be complicated and messy. Capra Wave is here to simplify your experience.
    </p>
  </div>
</main>
